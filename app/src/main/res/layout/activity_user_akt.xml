<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_akt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.martin.bepeakedprojekt.Settings.Credits_akt"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="@string/settings_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5"
            android:textSize="24sp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:text="@string/settings_user_height"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_weight"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_age"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_kostplanID"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_calories"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_culhydrates"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_protein"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="@string/settings_user_fat"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changepassword"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:text="@string/settings_changepassword"
                android:textAllCaps="false"
                android:soundEffectsEnabled="false" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>